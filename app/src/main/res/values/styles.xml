<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ImageViewBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MainLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="MainRelative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="BlueConstraint">
        <item name="android:layout_width">@dimen/layer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rectangle2</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="RedConstraint">
        <item name="android:layout_width">@dimen/layer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rectangle2</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="RelativeBattlefield">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2.7</item>
    </style>

    <style name="ButtonsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <style name="BlueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin_left</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ScoreLayout">
        <item name="android:layout_width">@dimen/layer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@drawable/rectangle2</item>
    </style>

    <style name="RedScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_left</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="BlueScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_left</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="Colon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="BlastoiseStyle">
        <item name="android:layout_width">@dimen/layer_height</item>
        <item name="android:layout_height">@dimen/layer_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:contentDescription">@string/image_of_blastoise</item>
    </style>

    <style name="CharizardStyle">
        <item name="android:layout_width">@dimen/layer_height</item>
        <item name="android:layout_height">@dimen/layer_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:contentDescription">@string/image_of_charizard</item>
    </style>

    <style name="BluePlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueHp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="BlueGames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_plus</item>
    </style>

    <style name="BlueMatchScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_topless</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle_text_plus</item>
    </style>

    <style name="RedPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedHp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="RedGames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_plus</item>
    </style>

    <style name="RedMatchScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle_text_plus</item>
    </style>

    <style name="FireAttack">
        <item name="android:layout_width">@dimen/layer_height</item>
        <item name="android:layout_height">@dimen/layer_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:contentDescription">@string/image_of_fire_attack</item>
    </style>

    <style name="WaterAttack">
        <item name="android:layout_width">@dimen/layer_height</item>
        <item name="android:layout_height">@dimen/layer_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:visibility">gone</item>
        <item name="android:contentDescription">@string/image_of_water_attack</item>
    </style>

    <style name="MainConstraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BlueProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">110</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:progress">110</item>
    </style>

    <style name="RedProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">110</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:progress">110</item>
    </style>


</resources>
